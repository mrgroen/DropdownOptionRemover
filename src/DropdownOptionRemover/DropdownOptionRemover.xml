<?xml version="1.0" encoding="utf-8" ?>
<widget id="DropdownOptionRemover.widget.DropdownOptionRemover" needsEntityContext="false" xmlns="http://www.mendix.com/widget/1.0/">
    <name>DropdownOptionRemover</name>
    <description>This widget can remove options from a specific dropdown element.</description>

    <icon></icon>

    <properties>
        <property key="nameDropdownWidget" type="string" required="true">
            <caption>Name of Dropdown widget</caption>
            <category>Setup</category>
            <description></description>
        </property>
        <property key="optionsToRemove" type="string" required="true">
            <caption>Options to remove</caption>
            <category>Setup</category>
            <description>Notation: 'option-key;option-key;option-key'</description>
        </property>
    </properties>
</widget>
